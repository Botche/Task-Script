@model CreateLessonBindingModel

@{
    ViewData["Title"] = "Create lesson";

    string h1Text = "Create lesson";
}

<partial name="_CreateUpdateHeader" model="h1Text" />

<hr />

<div class="w-50 mx-auto">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Hours" class="control-label"></label>
            <input asp-for="Hours" class="form-control" />
            <span asp-validation-for="Hours" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="IsOnline" /> @Html.DisplayNameFor(model => model.IsOnline)
            </label>
        </div>
        <div class="form-group">
            <label asp-for="PresentationDate" class="control-label"></label>
            <input asp-for="PresentationDate" class="form-control" />
            <span asp-validation-for="PresentationDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Seats" class="control-label"></label>
            <input asp-for="Seats" class="form-control" />
            <span asp-validation-for="Seats" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SubjectId" class="control-label"></label>
            <select asp-for="SubjectId" class="form-control">
                @foreach (var subject in this.ViewBag.Subjects)
                {
                    <option value="@subject.Id">@subject.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary w-100" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/requiredStar.js"></script>
}
