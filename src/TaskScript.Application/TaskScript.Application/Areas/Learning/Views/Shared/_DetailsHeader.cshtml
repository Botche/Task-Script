@model string

<div class="d-flex justify-content-between align-items-center">
    <h1>@Model</h1>


    @if (this.User.Identity.IsAuthenticated)
    {
        <div>
            <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-outline-info">Update</a>

            @if (this.User.IsInRole(RolesConstants.AdminRoleName))
            {
                <span>|</span>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">Delete</a>
            }
        </div>
    }
</div>