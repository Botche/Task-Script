@model SubjectsViewModel

@{
    ViewData["Title"] = "All subjects";
}

<div class="d-flex justify-content-between align-items-center">
    @if (Model.Username == "Gosho")
    {
        <h1>Subjects list view</h1>
    }
    else
    {
        <h1>Log in to continue</h1>
    }

    @if (this.User.Identity.IsAuthenticated)
    {
        <div>
            <a class="btn btn-outline-primary" asp-action="Create">Create subject</a>
        </div>
    }
</div>

<p>@Model.TimeNow</p>

<div>
    <h2>List of all subjects in the application</h2>
    <ul class="mt-3">
        @{
            foreach (var subject in Model.Subjects)
            {
                <li>
                    <a asp-controller="Subjects" asp-action="Details" asp-route-id="@subject.Id">
                        @subject.Name
                    </a>
                </li>
            }
        }
    </ul>
</div>
